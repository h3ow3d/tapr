[Unit]
Description=Climate Control Service
After=network.target

[Service]
ExecStart=/usr/local/bin/climate_control_venv/bin/python /usr/local/bin/climate_control.py
Restart=always
User=pingu
Group=pingu
StandardOutput=append:/var/log/climate_control.log
StandardError=append:/var/log/climate_control.log
Environment=PYTHONUNBUFFERED=1
Environment=TAPO_EMAIL=your_tapo_account_email
Environment=TAPO_PASSWORD=your_tapo_account_password
Environment=TAPO_IP_HUMIDIFIER=192.168.1.100
Environment=TAPO_IP_HEATER=192.168.1.101

[Install]
WantedBy=multi-user.target
