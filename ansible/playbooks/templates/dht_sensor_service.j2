[Unit]
Description=DHT Sensor Service
After=network.target

[Service]
ExecStart=/usr/local/bin/dht_sensor_venv/bin/python /usr/local/bin/dht_sensor.py
Restart=always
User=pingu
Group=pingu
StandardOutput=append:/var/log/dht_sensor.log
StandardError=append:/var/log/dht_sensor.log
Environment=PYTHONUNBUFFERED=1


[Install]
WantedBy=multi-user.target
